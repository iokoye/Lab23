@model MovieViewModel
@{
}

<h1>Registration</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Login" method="post" asp-controller="Movie">
            <div class="form-group">
                <label asp-for="ID" class="control-label">ID</label>
                <input asp-for="ID" class="form-control" />
                <label asp-for="Title" class="control-label">Title</label>
                <input asp-for="Title" class="form-control" />
                <label asp-for="Genre" class="control-label">Genre</label>
                <input asp-for="Genre" class="form-control" />
                <label asp-for="Year" class="control-label">Year</label>
                <input asp-for="Year" class="form-control" />
                <label asp-for="Actors" class="control-label">Actors</label>
                <input asp-for="Actors" class="form-control" />
                <label asp-for="Directors" class="control-label">Directors</label>
                <input asp-for="Directors" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>